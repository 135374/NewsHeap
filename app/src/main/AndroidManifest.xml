<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kunwars.newsheap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".English" />
        <activity android:name=".Punjabi" />
        <activity
            android:name=".WebViewActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Hindi" />
        <activity android:name=".Bengali" />
        <activity android:name=".Marathi" />
        <activity android:name=".Urdu" />
        <activity android:name=".Malyalam" />
        <activity android:name=".Tamil" />
        <activity android:name=".Gujrati" />
        <activity android:name=".Telgu" />
        <activity android:name=".Assamese" />
        <activity android:name=".Register"

            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>